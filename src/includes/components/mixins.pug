mixin jumbotron(index)
    .jumbotron
        picture.jumbotron__background
            source(srcset=`${imagePath}${jumbotron[index].desktop}.jpg`, class="jumbotron__image", media="(min-width: 768px)")
            source(srcset=`${imagePath}${jumbotron[index].tablet}.jpg`, class="jumbotron__image", media="(min-width: 480px)")
            img(src=`${imagePath}${jumbotron[index].movil}.jpg`, class="jumbotron__image", alt="sofipo")
        .jumbotron__box
            .jumbotron__description
                .jumbotron__header
                    h1.jumbotron__title= `${jumbotron[index].title}`
                    h2.jumbotron__subtitle= `${jumbotron[index].subtitle}`
                p.jumbotron__body= `${jumbotron[index].body}`

