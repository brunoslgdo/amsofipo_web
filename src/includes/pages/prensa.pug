extends ../templates/pages
block jumbo
    include ../mixins/mix-jumbo
    +jumbo(JUMBO_PRENSA)
block sections
    include ../config/conf-notas
    include ../config/conf-boletines
    .prensa
        .prensa__child.notas-prensa.mbottom--md
            button(class="tablink body normal light text--alt", onclick="prensa('notas-de-prensa', this, 'var(--second)')", id="defaultOpen") Notas de prensa
            button(class="tablink body normal light text--alt", onclick="prensa('boletines-de-prensa', this, 'var(--second)')") Boletines de presna
        .prensa__child.tabcontent#notas-de-prensa
            .notas-de-prensa__child
                ul.notas
                    each nota in NOTAS
                        li.notas__item: a(href=`${nota.href}`, target="_blank")
                            h1.notas__titulo= `${nota.titulo}`
                            h2.notas__autor= `${nota.autor}`
                            p.notas__medio= `${nota.medio}`
                            p.notas__fecha= `${nota.fecha}`
            
        .prensa__child.tabcontent#boletines-de-prensa    
            .notas-de-prensa__child
                ul.notas
                    each boletin in BOLETINES
                        li.notas__item: a(href=`../assets/${boletin.href}`, target="_blank")
                            h1.notas__titulo= `${boletin.titulo}`
                            p.notas__fecha= `${boletin.fecha}`
    script(src="../js/prensa.js")